{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": [
            "esnext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "strict": true,
        "target": "esnext",
        "types": [
            "chai",
            "mocha",
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "types/**/*.d.ts"
    ]
}
